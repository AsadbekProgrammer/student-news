<% if(mostviewed.length >= 3){ %>
<section class="section first-section">
    <div class="container-fluid">
        <div class="masonry-blog clearfix">        
            <div class="first-slot">
                <div class="masonry-box post-media">
                     <img style="width:745px; height: 419px" src="<%= mostviewed[0].image %>" alt="" class="img-fluid">
                     <div class="shadoweffect">
                        <div class="shadow-desc">
                            <div class="blog-meta">
                                <span class="bg-orange">
                                    <a href="/category/<%= mostviewed[0].category%>" title="">
                                        <% if ( mostviewed[0].category == 1) { %> Talabalar <% } %> 
                                        <% if ( mostviewed[0].category == 2) {%> Universitet <% } %>
                                        <% if ( mostviewed[0].category == 3) {%> Fan va Ta'lim <% } %>
                                        
                                    </a>
                                   
                                </span>
                                <h4><a href="/post/<%= mostviewed[0]._id %>" title=""><%= mostviewed[0].title %></a></h4>
                                <small><a href="/post/<%= mostviewed[0]._id %>" title=""><%= mostviewed[0].datePosted.toDateString() %></a></small>
                                <small><a href="/post/<%= mostviewed[0]._id %>" title=""><%= mostviewed[0].userid.username %></a></small>
                                <small><a href="/post/<%= mostviewed[0]._id %>" title=""><i class="fa fa-eye"></i> <%= mostviewed[0].counter %></a></small>
