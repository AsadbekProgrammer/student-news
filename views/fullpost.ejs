<!DOCTYPE html>
<html lang="en">
    <%-include('layouts/header');-%>
<body>

    <div id="wrapper">
        <header class="tech-header header">
            <div class="container-fluid">
                <%-include('layouts/navbar');-%>
            </div><!-- end container-fluid -->
        </header><!-- end market-header -->

        <section class="section single-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="page-wrapper">
                            <div class="blog-title-area text-center">
                                <ol class="breadcrumb hidden-xs-down">
                                    <li class="breadcrumb-item"><a href="/">Bosh sahifa</a></li>
                                    <li class="breadcrumb-item">
                                        <a href="/category/<%=blogpost.category%>">
                                            <% if ( blogpost.category == 1) { %> Talabalar <% } %> 
                                            <% if ( blogpost.category == 2) {%> Universitet <% } %>
                                            <% if ( blogpost.category == 3) {%> Fan va Ta'lim <% } %>
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item active"><%= blogpost.title %></li>
                                </ol>

                                <span class="color-orange">
                                    <a href="/category/<%=blogpost.category%>" title="">
                                        <% if ( blogpost.category == 1) { %> Talabalar <% } %> 
                                        <% if ( blogpost.category == 2) {%> Universitet <% } %>
                                        <% if ( blogpost.category == 3) {%> Fan va Ta'lim <% } %>
                                    </a>
                                </span>

                                <h3><%= blogpost.title %></h3>

                                <div class="blog-meta big-meta">
                                    <small><a href="#" title=""><%= blogpost.datePosted.toDateString() %></a></small>
                                    <small><a href="#" title="">by <%= blogpost.userid.username %></a></small>
                                    <small><a href="#" title=""><i class="fa fa-eye"></i><%=blogpost.counter%></a></small>
                                </div><!-- end meta -->
                            </div><!-- end title -->

                            <div class="single-post-media">
                                <img src="<%=blogpost.image%>" alt="" class="img-fluid">
                            </div><!-- end media -->

                            <div class="blog-content">  
                                <div class="pp">
                                    <p><%- blogpost.body %></p>
                                </div><!-- end pp -->
                            </div><!-- end content -->

                            <hr class="invis1">

                            <div class="custombox authorbox clearfix">
                                <h4 class="small-title">Muallif</h4>
                                <div class="row">
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                        <img src="/public/upload/author.jpg" alt="" class="img-fluid rounded-circle"> 
                                    </div><!-- end col -->

                                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                                        <h4><a href="#"><%= blogpost.userid.name %> <%= blogpost.userid.lastname %></a></h4>

                                    </div><!-- end col -->
                                </div><!-- end row -->
                            </div><!-- end author-box -->

                            <hr class="invis1">

                            <div class="custombox clearfix">
                                <h4 class="small-title">O'xshash yangiliklar</h4>
                                <div class="row">
                                    <% if(news.length > 1) { %>
                                    <div class="col-lg-6">
                                        <div class="blog-box">
                                            <div class="post-media">
                                                <a href="/post/<%=news[0]._id%>" title="">
                                                    <img src="<%=news[0].image%>" alt="" class="img-fluid">
                                                    <div class="hovereffect">
                                                        <span class=""></span>
                                                    </div><!-- end hover -->
                                                </a>
                                            </div><!-- end media -->
                                            <div class="blog-meta">
                                                <h4><a href="/post/<%=news[0]._id%>" title=""><%=news[0].title%> </a></h4>
                                                <small>
                                                    <a href="/category/<%=blogpost.category%>" title="">
                                                    <% if ( blogpost.category == 1) { %> Talabalar <% } %> 
                                                    <% if ( blogpost.category == 2) {%> Universitet <% } %>
                                                    <% if ( blogpost.category == 3) {%> Fan va Ta'lim <% } %>
                                                    </a>
                                                </small>
                                                <small><a href="/post/<%=news[0]._id%>" title=""><%=news[0].datePosted.toDateString()%></a></small>
                                            </div><!-- end meta -->
                                        </div><!-- end blog-box -->
                                    </div><!-- end col -->

                                    <div class="col-lg-6">
                                        <div class="blog-box">
                                            <div class="post-media">
                                                <a href="/post/<%=news[1]._id%>" title="">
                                                    <img src="<%=news[1].image%>" alt="" class="img-fluid">
                                                    <div class="hovereffect">
                                                        <span class=""></span>
                                                    </div><!-- end hover -->
                                                </a>
                                            </div><!-- end media -->
                                            <div class="blog-meta">
                                                <h4><a href="/post/<%=news[1]._id%>" title=""><%=news[1].title%></a></h4>
                                                <small>
                                                    <a href="/category/<%=blogpost.category%>" title="">
                                                        <% if ( blogpost.category == 1) { %> Talabalar <% } %> 
                                                        <% if ( blogpost.category == 2) {%> Universitet <% } %>
                                                        <% if ( blogpost.category == 3) {%> Fan va Ta'lim <% } %>
                                                    </a>
                                                </small>
                                                <small><a href="/post/<%=news[1]._id%>" title=""><%=news[0].datePosted.toDateString()%></a></small>
                                            </div><!-- end meta -->
                                        </div><!-- end blog-box -->
                                    </div><!-- end col -->
                                    <% } else { %>
                                        <h4>O'xshash yangiliklar hozircha yo'q!</h4>
                                    <% } %>
                                </div><!-- end row -->
                            </div><!-- end custom-box -->

                            <hr class="invis1">

                           <%-include('layouts/comments.ejs');-%> 
                        </div><!-- end page-wrapper -->
                    </div><!-- end col -->
                    <%-include('layouts/right_sidebar');-%>
                </div><!-- end row -->
            </div><!-- end container -->
        </section>

       <%-include('layouts/footer');-%>

        <div class="dmtop">Scroll to Top</div>
        
    </div><!-- end wrapper -->

   <%-include('layouts/scripts');-%>

</body>
</html>