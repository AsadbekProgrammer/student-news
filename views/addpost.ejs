                                            <option value="2">Universitet</option>
                                            <option value="3">Fan va Ta'lim</option>
                                        </select>
                                        <textarea id="body" class="form-control" name="body" placeholder="Xabar matni:"></textarea>
                                        <!--<div id="summernote"></div>-->
